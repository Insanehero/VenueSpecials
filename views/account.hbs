<div class="container">

  <h1 class="account-header">Login</h1>

  <form class="form-horizontal" action="/users/login" method="post">
    <div class="form-group">
      <label for="login-username" class="col-sm-2 control-label">Username</label>
      <div class="col-sm-4">
        <input id="login-username" class="form-control" type="text" name="username" value="" placeholder="Your Username">
      </div>
    </div>
    <div class="form-group">
        <label for="login-password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-4">
          <input id="login-password" class="form-control" type="password" name="password" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input id="submit-btn" type="submit" value="Login">
      </div>
    </div>
  </form>

  <button id="registerbtn" type='button' class='btn btn-primary input-lg account-header'>Register</button>

  <div id="register">
  <h1 class="account-header">Register</h1>

    <form class="form-horizontal" action="/users/register" method="post">
        <div class="form-group">
          <label for="register-username" class="col-sm-2 control-label">Username</label>
          <div class="col-sm-4">
            <input id="register-username" type="text" class="form-control" name="username" placeholder="Your Username">
          </div>
        </div>
        <div class="form-group">
          <label for="register-password" class="col-sm-2 control-label">Password</label>
          <div class="col-sm-4">
              <input id="register-password" class="form-control" type="password" name="password" placeholder="Password">
          </div>
        </div>
        <div class="form-group">
          <label for="register-email" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-4">
            <input id="register-email" class="form-control" type="email" name="email" placeholder="Email">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Create Account">
        </div>
      </div>
    </form>
  </div>
</div>
