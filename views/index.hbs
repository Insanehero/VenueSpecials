<script type='text/javascript'>
slider();
function slider() {
  var slideCount = $('.slide-reel ul li').length;
  var slideWidth = window.innerWidth;
  var slideHeight = window.innerHeight;
  var sliderUlWidth = slideCount * slideWidth;

  $('.slide-reel').css({
      width: slideWidth,
      height: slideHeight
  });

  $('.slide-reel ul').css({
      width: sliderUlWidth
  });

  $('.slide-reel ul li:last-child').prependTo('.slider ul');

  function moveRight() {
      $('.slide-reel ul').animate({
          left: -slideWidth
      }, 1000, function() {
          $('.slide-reel ul li:first-child').appendTo('.slide-reel ul');
          $('.slide-reel ul').css('left', '');
      });

  };
  setInterval(function() {
      moveRight();
  }, 1000);
}

</script>
